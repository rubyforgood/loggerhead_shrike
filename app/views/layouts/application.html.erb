<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Loggerhead Shrike Conservation Effort</title>

    <!-- Material Design fonts -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- Bootstrap Material Design -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/css/material-fullpalette.min.css">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/css/ripples.min.css"> -->
    <link href="https://fezvrasta.github.io/snackbarjs/dist/snackbar.min.css" rel="stylesheet">

    <!-- Need to hide key for dev and deploy -->
    <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyCB8Q9W9_cQW9aklwy4ACrd1TtujZq47VQ"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <%= link_to "LSCE", root_path(anchor: "tophome"), class: "navbar-brand anchor-link", data: {target: 'tophome'} %>
      </div>

      <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to root_path(anchor: "about"), id: 'about_link', class: 'anchor-link', data: {target: 'about'} do %>
              About
              <div class="ripple-container"></div>
            <% end %>
          </li>
          <li>
            <%= link_to root_path(anchor: "meet"), id: 'meet_link', class: 'anchor-link', data: {target: 'meet'} do %>
              Meet the Birds
              <div class="ripple-container"></div>
            <% end %>
          </li>
          <li>
            <%= link_to root_path(anchor: "habitat"), id: 'habitat_link', class: 'anchor-link', data: {target: 'habitat'} do %>
              Habitat
              <div class="ripple-container"></div>
            <% end %>
          </li>
          <li>
            <%= link_to root_path(anchor: "conservation"), id: 'conservation_link', class: 'anchor-link', data: {target: 'conservation'} do %>
              Conservation
              <div class="ripple-container"></div>
            <% end %>
          </li>
          <li>
            <%= link_to root_path(anchor: "outreach"), id: 'outreach_link', class: 'anchor-link', data: {target: 'outreach'} do %>
              Outreach
              <div class="ripple-container"></div>
            <% end %>
          </li>

          <% if can? :read, Observation %>
              <li><%= link_to("Observations", observations_path) %></li>
          <% elsif can? :create, Observation %>
              <li><%= link_to("Add Observation", new_observation_path) %></li>
          <%end%>

          <%if can? :manage, :all %>
          <li><%= link_to "Admin Panel", guests_path %></li>
          <li><%= link_to "Invite New User", new_user_invitation_path%></li>
          <%end%>
          <% if current_user %>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign In", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
      </nav>

      <%= yield %>

      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    </body>
  </html>
